<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:id="@+id/img_Bundle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_Bundle"
        app:cardCornerRadius="10dp">
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/item_Bundle"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_Bundle"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Price - $"/>
            <TextView
                android:id="@+id/txt_Price"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    app:layout_constraintLeft_toRightOf="@+id/img_Bundle"
    app:layout_constraintTop_toBottomOf="@+id/item_Bundle"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/sub"
        android:text="-"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/small_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/txt_kg"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <Button
        android:text="+"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/small_btn"
        android:id="@+id/add"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/disc_Bundle"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/disc_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#d87716"
        android:textSize="15dp"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_disc_price"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#d87716"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Discount"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:textColor="#d87716"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>